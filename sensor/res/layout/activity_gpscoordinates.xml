<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    
    tools:context=".MainActivity" 
    android:background="#E0EEEE" >

      <EditText
          android:id="@+id/locationText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toLeftOf="@+id/find_location"
          android:ems="10"
          android:hint="Enter Location:" />

<Button
    android:id="@+id/find_location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignTop="@+id/locationText"
    android:background="@drawable/mybutton"
    android:text="@string/find_location"
    android:textColor="#ffffff" />

<Button
    android:id="@+id/stop_location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/find_location"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="16dp"
    android:background="@drawable/mybutton"
    android:text="@string/stop_location"
    android:textColor="#ffffff" />

    </RelativeLayout>